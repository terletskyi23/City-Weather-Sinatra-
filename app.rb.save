require 'sinatra'
require 'forecast_io'

class City_Weather < Sinatra::Base
	ForecastIO.api_key = 'http://api.openweathermap.org/data/2.5/forecast/daily?q=Lviv&mode=json&units=metric&cnt=14&appid=e289605282a4562afea94a0ffe4ffaa8'

	get '/' do
		Forecast::IO.api_key = 'e289605282a4562afea94a0ffe4ffaa8'
		forecast = Forecast::IO.forecast(37.8267, -122.423) # params are: latitude, longitude
		forecast.currently # gives you the current forecast datapoint
		forecast.currently.summary
		
		"Hi guy" + forecast.currently.summary
	end
end
